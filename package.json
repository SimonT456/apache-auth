{
  "name": "apache-auth",
  "version": "1.0.0",
  "description": "Frontend for transparent, application-agnostic SSO with Apache's mod_auth_form",
  "main": "index.js",
  "scripts": {
    "build": "npm run build-css && npm run build-js",
    "build-js": "mkdir -p dist && webpack --config config/webpack.js",
    "build-css": "mkdir -p dist && sass --style compressed src/client/styles/main.scss:dist/main.css",
    "build-js-watch": "mkdir -p dist && webpack --config config/webpack.js --watch --colors",
    "build-css-watch": "mkdir -p dist && sass --watch --style compressed src/client/styles/main.scss:dist/main.css",
    "start": "node index.js",
    "lint": "npm run lint-js && npm run lint-scss",
    "lint-js": "eslint src test",
    "lint-scss": "stylelint 'src/**/*.scss' --syntax scss",
    "test": "npm run lint && node test | tap-spec",
    "cover": "istanbul cover test --print detail",
    "coveralls": "istanbul cover test --print detail && cat coverage/lcov.info | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/LINKIWI/apache-auth.git"
  },
  "author": "Kevin Lin <developer@kevinlin.info>",
  "license": "MIT",
  "dependencies": {
    "babel-core": "^6.11.4",
    "body-parser": "^1.15.2",
    "browser-request": "^0.3.3",
    "cookie-parser": "^1.4.3",
    "deep-extend": "^0.4.1",
    "dottie": "^1.1.1",
    "duo_web": "^1.0.2",
    "express": "^4.14.0",
    "humanize": "0.0.9",
    "lru-cache": "^4.0.2",
    "morgan": "^1.7.0",
    "pug": "^2.0.0-beta6",
    "range": "0.0.3",
    "raven": "^0.12.3",
    "react": "^15.3.0",
    "react-dom": "^15.3.0",
    "react-helmet": "^3.1.0",
    "react-router": "^2.6.1",
    "request": "^2.79.0"
  },
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-cli": "^6.11.4",
    "babel-eslint": "^6.1.2",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-0": "^6.5.0",
    "coveralls": "^2.11.15",
    "enzyme": "^2.6.0",
    "eslint": "^3.3.1",
    "eslint-config-uber-jsx": "^3.0.1",
    "eslint-plugin-react": "^6.1.2",
    "istanbul": "^1.1.0-alpha.1",
    "jsdom": "^9.8.3",
    "pug-cli": "^1.0.0-alpha6",
    "react-addons-test-utils": "^15.4.1",
    "recursive-readdir": "^2.1.0",
    "sinon": "^1.17.6",
    "stylelint": "^7.6.0",
    "stylelint-config-standard": "^15.0.0",
    "tap-spec": "^4.1.1",
    "tape": "^4.6.0",
    "webpack": "^1.13.1"
  }
}
